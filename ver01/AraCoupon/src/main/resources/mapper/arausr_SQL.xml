	<!-- select user information -->
	<select id="AraUsr.selectUserInfo" parameterType="Map" resultType="Map">
		SELECT  /* AraUsr.selectUserInfo */
			A.USR_ID
			, A.USR_NM
			, A.MBL_NO
		FROM
			ARA_USR  A
		WHERE 1=1
			AND A.USR_ID = #{usrid}
	</select>

</mapper>
