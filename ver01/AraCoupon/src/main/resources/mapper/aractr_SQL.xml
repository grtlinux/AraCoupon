	<!-- select center information -->
	<select id="AraCtr.selectCenterInfo" parameterType="Map" resultType="Map">
		SELECT  /* AraCtr.selectCenterInfo */
			A.CTR_ID
			, A.CTR_NM
			, A.MBL_NO
			, A.TEL_NO
		FROM
			ARA_CTR  A
		WHERE 1=1
			AND A.CTR_ID = #{ctrid}
	</select>

</mapper>
